	<authorUrl>www.bakual.net</authorUrl>
	<version>1.0.0</version>
	<description>PLG_AUTH_ADMIDIO_XML_DESCRIPTION</description>
	<files>
		<filename plugin="admidio">admidio.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="user"
					type="text"
					label="User"
				/>

				<field
					name="password"
					type="password"
					label="Password"
				/>

				<field
					name="database"
					type="text"
					label="Database"
				/>
			</fieldset>
		</fields>
	</config>
